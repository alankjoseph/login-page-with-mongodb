<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <title>Admin Home Page</title>
</head>
<style>
    body {
        background-color: rgb(126, 240, 19);
    }

    table, tr, td {
        border-color: black;
        border: 2px solid;
        
    }

    .heading {
        text-align: center;
        font-size: 20px;
    }

    .data {
        color: brown;
        font-size: 20px;


    }

    .table1 {
        background-color: rgb(106, 230, 139);
        

    }

    .flex-container {

        display: flex;
        justify-content: space-between;
        margin-block: 25px;
        margin-left: 30px;
        margin-right: 30px;

    }

    .delete {
        height: 150px;
    }
</style>

<body>
    <div class="text-center">
        <h1>Admin's Page</h1>
    </div>
    <div class="flex-container">
        <div class="datatable">
            <h1 class="data">DATA-TABLE</h1>
            <% if(details !=null) { %>
                <table class="table1">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Password</th>

                    </tr>
                    <% details.forEach(function(item){ %>
                        <tr>
                            <td>
                                <%= item.firstname %>
                            </td>
                            <td>
                                <%= item.email %>
                            </td>
                            <td>
                                <%= item.password %>
                            </td>


                        </tr>
                        <% }) %>
                </table>
                <% } %>

        </div>
        <div class="row mb-4">
            <div class="col">
                <div class="delete">
                    <h1 class="data bi bi-trash">DELETE DATA</h1>
                    <form action="/delete" method="post">
                        <!-- 2 column grid layout with text inputs for the first and last names -->
                        <div class="form-outline">
                            <input type="text" id="form3Example1" class="form-control " name="deleteemail" />
                            <label class="form-label" for="form3Example1">Enter The Email You Want To Delete</label>
                        </div>
                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4">Delete</button>
                    </form>
                </div>
                <div class="search">
                    <h1 class="data">SEARCH DATA</h1>
                    <form action="/search" method="post">
                        <div class="form-outline">
                            <input type="text" id="form3Example1" class="form-control " name="name" />
                            <label class="form-label" for="form3Example1">Enter The Name You Want To
                                Search</label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mb-4">SEARCH</button>
                    </form>
                </div>
            </div>
        </div>

        

        <div class="insert">
            <h1 class="data">INSERT DATA</h1>
            <form action="/insert" method="post">
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input type="email" id="form3Example3" class="form-control" name="insertEmail" />
                    <label class="form-label" for="form3Example3">Email address</label>
                </div>
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row mb-4">
                    <div class="col">
                        <div class="form-outline">
                            <input type="text" id="form3Example1" class="form-control" name="insertFirstName" />
                            <label class="form-label" for="form3Example1">First Name</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col">
                        <div class="form-outline">
                            <input type="text" id="form3Example1" class="form-control" name="insertLastName" />
                            <label class="form-label" for="form3Example1">Last Name</label>
                        </div>
                    </div>
                </div>
                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" id="form3Example4" class="form-control" name="insertPassword" />
                    <label class="form-label" for="form3Example4">Password</label>
                </div>
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Insert</button>
            </form>
        </div>

        <div class="update">
            <h1 class="data">UPDATE DATA</h1>
            <form action="/update " method="post">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input type="email" id="form3Example3" class="form-control" name="updateemail" />
                    <label class="form-label" for="form3Example3">Email address</label>
                </div>

                <div class="row mb-4">
                    <div class="col">
                        <div class="form-outline">
                            <input type="text" id="form3Example1" class="form-control" name="updatefirstname" />
                            <label class="form-label" for="form3Example1">First Name</label>
                        </div>
                    </div>

                </div>

                <div class="row mb-4">
                    <div class="col">
                        <div class="form-outline">
                            <input type="text" id="form3Example1" class="form-control" name="updatelastname" />
                            <label class="form-label" for="form3Example1">Last Name</label>
                        </div>
                    </div>

                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" id="form3Example4" class="form-control" name="updatepassword" />
                    <label class="form-label" for="form3Example4">Password</label>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Update</button>



        </div>
        <div logout>
            <a href = "/adminlogout"  class="btn btn-primary">Logout</a>
        </div>

</body>

</html>